<MenuScreen>:
    MDBoxLayout:
        spacing: 5
        padding: [10, 10, 10, 10]
        MDRaisedButton:
            text: "Goto Settings"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: (1.0, 1.0)
            md_bg_color: "orange"
            on_press:
                root.manager.current = "settings"
                root.manager.transition.direction = "down"
        MDRaisedButton:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: (1.0, 1.0)
            md_bg_color: "orange"
            text: "Quit"

<SettingsScreen>:
    BoxLayout:
        MDRaisedButton:
            text: "My settings button"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: (1.0, 1.0)
            md_bg_color: "orange"
        MDRaisedButton:
            text: "Back to Menu"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: (1.0, 1.0)
            md_bg_color: "orange"
            on_press:
                root.manager.current = "menu"
                root.manager.transition.direction = "up"

