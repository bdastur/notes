#:import Factory kivy.factory


<ExampleBanner>
    banner: _banner
    listItemOne: _listItemOne
    listItemTwo: _listItemTwo
    listItemThree: _listItemThree

    MDBanner:
        id: _banner
        over_widget: _scroll
        vertical_pad: _toolbar.height

    MDTopAppBar:
        id: _toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        elevation: 2
        left_action_items: [["dots-vertical", lambda x: None]]
        pos_hint: {"top": 1}
    
    ScrollView:
        id: _scroll
        size_hint_y: None
        height: Window.height - _toolbar.height

        MDGridLayout:
            id: _grid
            cols: 1
            adaptive_height: True
            padding: "10dp"
            spacing: "10dp"

            OneLineListItem:
                id: _listItemOne
                text: "ThreeLineBanner"
                
            OneLineListItem:
                id: _listItemTwo
                text: "Banner without actions"
            OneLineListItem:
                id: _listItemThree
                text: "TwoLineIconBanner"
                


    
